{- States: Insert & Replace -}

-- ----------------------------------------------------- --
TYPEDEF  VimCommand
    ::=
          E_Esc
        | E_i
	| E_I
	| E_a
ENDDEF
-- ----------------------------------------------------- --
TYPEDEF  VimState
    ::=
          V_Normal
        | V_Insert
ENDDEF

-- ---------------------------------------------------------- --


PROCDEF  vimTransition  [ In :: VimCommand; Out :: VimState ]  ()
    ::=
                 In ?qop [[ isE_a(qop) ]]
            >-> Out !V_Normal >-> vimTransition [In,Out] ()
	##
		In ?qop [[ isE_i(qop) ]]
	    >-> Out !V_Normal >-> vimTransition [In,Out] ()
        
ENDDEF


-- ----------------------------------------------------- --

CHANDEF  Chans  ::=  Stim :: VimCommand ;
                     Resp :: VimState
ENDDEF

-- ----------------------------------------------------- --

MODELDEF  Mod
 ::=
     CHAN IN    Stim
     CHAN OUT   Resp

     BEHAVIOUR
                vimTransition [ Stim, Resp ] ()
ENDDEF

-- ----------------------------------------------------- --

CNECTDEF  Sut
 ::=
     CLIENTSOCK

     CHAN OUT  Stim          HOST "localhost"  PORT 10000
     ENCODE    Stim ? qop     ->  ! toString(qop)

     CHAN IN   Resp          HOST "localhost"  PORT 10000
     DECODE    Resp ! fromString(s)    <-   ? s
ENDDEF

